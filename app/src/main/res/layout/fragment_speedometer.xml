<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.vnidens.view.gauge.GaugeIndicatorView
        android:id="@+id/giv_speedometer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/black"
        android:paddingHorizontal="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:giv_maxValue="240"
        app:giv_dangerousValue="140"
        app:giv_currentValue="100"
        app:giv_handColor="@color/green_500"
        app:giv_font="fonts/Goldman-Regular.ttf"/>

</androidx.constraintlayout.widget.ConstraintLayout>